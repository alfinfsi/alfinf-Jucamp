<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_alfinf_factura_form" model="ir.ui.view">
        <field name="name">alfinf.factura.form</field>
        <field name="model">alfinf.factura</field>
        <field name="arch" type="xml">
            <form string="factura">
                <sheet name="factura_form">
                    <div class="oe_title">
                        <label for="num_Factura" string="Nombre"/>
                        <h1>
                            <div class="d-flex">
                                <field class="text-break" name="num_Factura"/>
                            </div>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="fecha_Factura"/>
                            <field name="scta_Cliente"/>
                            <field name="cliente"/>
                            <field name="euBase"/>
                            <field name="pc_IVA"/>
                            <field name="scta_IVA"/>
                            <field name="euIVA"/>
                            <field name="stca_Venta"/>
                        </group>
                        <group>
                            <field name="euTotal"/>
                            <field name="fecha_Operacion"/>
                            <field name="r_Fecha_Factura"/>
                            <field name="r_Num_Factura"/>
                            <field name="r_euBase"/>
                            <field name="r_euIVA"/>
                            <field name="tipo_Rectificativa"/>
                            <field name="pais_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="alfinf_factura_tree_view" model="ir.ui.view">
        <field name="name">alfinf.factura.tree.view</field>
        <field name="model">alfinf.factura</field>
        <field eval="7" name="priority"/>
        <field name="arch" type="xml">
        <!-- Tabla de trazas -->
            <tree string="Trazas" multi_edit="1" duplicate="false" sample="1">
                <field name="num_Factura"/>
            </tree>
        </field>
    </record>

    <record id="alfinf_factura_search" model="ir.ui.view">
        <field name="name">alfinf.factura.search</field>
        <field name="model">alfinf.factura</field>
        <field name="arch" type="xml">
            <search string="Factura busqueda">
                <field name="num_Factura" string="Numero factura" required="1"/>
            </search>
        </field>
    </record>
    <record id="action_alfinf_factura" model="ir.actions.act_window">
        <field name="name">Facturas</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">alfinf.factura</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="context">{}</field>
        <field name="view_id" ref="alfinf-jucamp.alfinf_factura_tree_view"/>
        <field name="search_view_id" ref="alfinf-jucamp.alfinf_factura_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea una nueva Factura
            </p>
            <p>
                Puedes crear una nueva Factura.
            </p>
        </field>
    </record>

    <menuitem
        id="menu_alfinf_factura"
        name="Factura"
        parent="sale.sale_menu_root"
        sequence="51"
        action="alfinf-jucamp.action_alfinf_factura"
        groups="base.group_system"
    />
</odoo>
