<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="alfinf_parcela_form" model="ir.ui.view">
            <field name="name">alfinf.parcela.form</field>
            <field name="model">alfinf.parcela</field>
            <field name="inherit_id" ref="alfinf-connector.view_alfinf_parcela_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='finca_id']" position="after">
                    <div class="container">
                        <div class="row">
                            <div class="col-3 d-flex">
                                <label for='municipio_id'/>
                                <field name='municipio_id'/>
                            </div>
                            <div class="col-3 d-flex">
                            <label for='recinto'/>
                            <field name='recinto'/>
                            </div>
                            <div class="col-3 d-flex">
                                <label for='sector'/>
                                <field name='sector'/>
                            </div>
                            <div class="col-3 d-flex">
                                <label for='poligono'/>
                                <field name='poligono'/>
                            </div>
                            <div class="col-3 d-flex">
                                <label for='variedad_id'/>
                                <field name='variedad_id'/>
                            </div>
                            <div class="col-3 d-flex">
                                <label for='tipoplantacion_id'/>
                                <field name='tipoplantacion_id'/>
                            </div>
                            <div class="col-12 d-flex">
                                <label for='traza_id'/>
                                <field name='traza_id'/>
                            </div>
                            <div class="col-12 d-flex">
                                <label for='trazanomina_id'/>
                                <field name='trazanomina_id'/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
